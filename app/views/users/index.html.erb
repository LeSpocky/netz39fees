<div class="row">
  <div class="span6">
    <h2>Users</h2>

    <table class="table table-striped table-condensed table-hover">
      <thead>
        <tr>
          <th>Username</th>
          <th><th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td>
              <div class="btn-group pull-right">
                <%= link_to "edit", edit_user_path(user), class: "btn btn-mini" %>
                <%= link_to "delete", user_path(user), method: :delete, confirm: "Do you really want to delete this user?", class: "btn btn-danger btn-mini" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "Add new user", new_user_url %>
  </div>
</div>
